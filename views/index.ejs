<%- include ("partials/header.ejs")  %>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/styles.css">
    <h1>To Do List</h1>
    
    <!-- This is the text box -->
    <div class="inputBox">
        <form action="/submit" method="POST">
            <input type="text" placeholder="To do" name="item"><br>
            <button type="submit" class="btn btn-dark">Add</button>
        </form>
    </div>

    <!-- This is the new list created -->
    <div class="itemBox">
        <p><%= `Incomplete: ${total}` %></p>
        <div class="tasks-container">
        <% if (locals.itemList) { %>
            <% for (var i = 0; i < itemList.length; i++) { %>
                <form action="/remove" method="POST">
                    <div class="task">
                    <input type="hidden" name="targetItem" value="<%= i %>">
                    <button name="doneItem" type="submit" class="btn btn-outline-danger" value="<%=itemList[i]._id%>"> Done</button>
                    <label class="task task2"><%= itemList[i].name %></label><br>
                    </div>
                </form>
            <% }; %>
        <% } %>
        </div>
    </div>
</body>

